<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FavoriteActivity">


    <RelativeLayout
        android:id="@+id/relative_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_one">



        <LinearLayout
            android:layout_marginTop="@dimen/margin_10"
            android:id="@+id/txt_profile_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:padding="@dimen/padding_5">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/gender_background_profile">

                <ImageView
                    android:id="@+id/email_button"
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25"
                    android:layout_gravity="center"
                    android:src="@drawable/gender_profile_icon" />

            </FrameLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="C-3 Sector 12, Noida"
                    android:textColor="@color/simple_white"
                    android:textSize="@dimen/sub_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Work"
                    android:textColor="@color/simple_white"
                    android:textSize="@dimen/sub_title" />


            </LinearLayout>
            <LinearLayout

                android:layout_weight="1.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

              <ImageView
                  android:layout_width="@dimen/margin_30"
                  android:layout_height="@dimen/margin_30"
                  android:src="@drawable/delete_fav_icon"/>
            </LinearLayout>

        </LinearLayout>




    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_two"
        android:paddingTop="@dimen/margin_10">
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/simple_white" />

        <LinearLayout
            android:layout_marginTop="@dimen/margin_10"
            android:id="@+id/txt_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_others"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/about_background_settings">

                <ImageView
                    android:id="@+id/logout_button"
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    android:src="@drawable/add_favriotes_icon" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Add More"
                    android:padding="@dimen/padding_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title" />



            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>