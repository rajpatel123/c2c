<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyRidesActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative_myrides_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_20">

                <LinearLayout
                    android:id="@+id/linear_myrides_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/circle_first"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_background_myrides_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:paddingLeft="@dimen/padding_5"
                            android:text="C3 Block C,Sector 12, Noida,Uttar Pradesh 20131,india"
                            android:textColor="@color/black_titles"
                            android:textSize="@dimen/sub_title" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="2px"
                            android:layout_height="@dimen/margin_20"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:background="@color/black_titles" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/circle_second"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_background_myrides_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:paddingLeft="@dimen/padding_5"
                            android:text="C3 Block C,Sector 12, Noida,Uttar Pradesh 20131,india"
                            android:textColor="@color/black_titles"
                            android:textSize="@dimen/sub_title" />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

            <View
                android:id="@+id/view_txt"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/relative_myrides_top"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@color/black" />

            <RelativeLayout
                android:id="@+id/relative_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_txt"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20">

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_3"
                    android:text="03/04/2019"
                    android:textColor="@color/simple_white"
                    android:textSize="@dimen/sub_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_toRightOf="@id/text_date"
                    android:padding="@dimen/padding_3"
                    android:text="09:34 AM"
                    android:textColor="@color/simple_white"
                    android:textSize="@dimen/sub_title" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/padding_10"
                    android:layout_toRightOf="@id/text_date"
                    android:gravity="end"
                    android:padding="@dimen/padding_3"
                    android:text="Link"
                    android:textColor="@color/simple_white"
                    android:textSize="@dimen/sub_title" />

            </RelativeLayout>

            <RelativeLayout
                android:paddingBottom="7dp"
                android:id="@+id/relative_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_date_time"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_20">

                <TextView
                    android:id="@+id/text_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelled"
                    android:textColor="@color/red"
                    android:textSize="@dimen/title" />


                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="@dimen/margin_50"
                    android:layout_marginRight="@dimen/margin_70"
                    android:layout_toRightOf="@id/text_cancel"
                    android:gravity="end"
                    android:text="C2C"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/padding_10"
                    android:text="Rs. 10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title" />


            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>