<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingActivity">


    <RelativeLayout
        android:id="@+id/relative_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_one">

        <TextView
            android:id="@+id/txt_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:padding="@dimen/padding_5"
            android:text="General"
            android:textColor="@color/black_titles"
            android:textSize="@dimen/title" />

        <LinearLayout
            android:layout_marginTop="@dimen/margin_5"
            android:id="@+id/txt_profile_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_general"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/gender_background_profile">

                <ImageView
                    android:id="@+id/email_button"
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25"
                    android:layout_gravity="center"
                    android:src="@drawable/gender_profile_icon" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="+91-9876567896"
                    android:textColor="@color/simple_white"
                    android:textSize="@dimen/sub_title" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_10"
            android:id="@+id/linear_Favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_profile_settings"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/favorite_backgroung_settings">

                <ImageView
                    android:id="@+id/gender_button"
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25"
                    android:layout_gravity="center"
                    android:src="@drawable/star_favorites_setings" />

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Favorites"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Add an address"
                    android:textColor="@color/simple_white"
                    android:textSize="@dimen/sub_title" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_10"
            android:id="@+id/txt_preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_Favorites"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/prefrences_background_settings">

                <ImageView
                    android:id="@+id/birth_button"
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    android:src="@drawable/preferences_settings_icon" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Preferences"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Change your preference"
                    android:textColor="@color/simple_white"
                    android:textSize="@dimen/sub_title" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_10"
            android:id="@+id/txt_app_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_preferences"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/app_language_background_settings">

                <ImageView
                    android:id="@+id/member_since_button"
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25"
                    android:layout_gravity="center"
                    android:src="@drawable/language_setting_icon" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="App Language"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="English"
                    android:textColor="@color/simple_white"
                    android:textSize="@dimen/sub_title" />


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_two"
        android:paddingTop="@dimen/margin_10">
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/simple_white" />
        <TextView
            android:id="@+id/txt_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:padding="@dimen/padding_5"
            android:text="Others"
            android:textColor="@color/black_titles"
            android:textSize="@dimen/title" />
        <LinearLayout
            android:layout_marginTop="@dimen/margin_10"
            android:id="@+id/txt_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_others"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/about_background_settings">

                <ImageView
                    android:id="@+id/logout_button"
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    android:src="@drawable/scooter" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="About"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="5.4.1"
                    android:textColor="@color/simple_white"
                    android:textSize="@dimen/sub_title" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>