<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="@dimen/_16dp">

            <TextView
                android:id="@+id/source"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:gravity="center"

                android:text="Select pick up point"

                android:textSize="@dimen/txt_medium"
                android:drawableLeft="@drawable/circle_background_myrides_green"
                android:background="@drawable/oval_shape"
                android:elevation="5dp"

                android:minHeight="?attr/actionBarSize" />



            <TextView
                android:id="@+id/destination"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/circle_background_myrides_red"
                android:layout_below="@+id/source"
                android:background="@drawable/oval_shape"
                android:padding="10dp"
                android:text="Select drop point"
                android:gravity="center"
                android:textSize="@dimen/txt_medium"
                android:elevation="5dp"

                android:minHeight="?attr/actionBarSize" />


        </RelativeLayout>

        <ProgressBar
            android:id="@+id/loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationZ="@dimen/_12dp" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"

            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:gravity="bottom"

            android:elevation="@dimen/_16dp">



            <TextView

                android:id="@+id/button_open_bottomsheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="Ride Now"

                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/txt_medium"
                android:elevation="5dp"

                android:minHeight="?attr/actionBarSize" />
            <View
                android:id="@+id/devider2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/button_open_bottomsheet"
                android:background="@color/greenmoney" />


        </RelativeLayout>


    </FrameLayout>


</RelativeLayout>
